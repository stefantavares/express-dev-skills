<%- include('../partials/header') %>

  <h1>Stefan's Super Mega Dev Skills</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Skill:</th>
      </tr>
    </thead>
    <tbody>
      <% skills.forEach(function(s) { %>
        <tr>
          <td><a href="/skills/<%= s.id %>"><%= s.skill %></a></td>
          <td>
            <form action="/skills/<%= s.id %>?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-danger">X</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>